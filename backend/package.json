{
  "name": "video-course-platform-backend",
  "version": "1.0.0",
  "description": "Backend for a video course platform",
  "main": "src/server.ts",
  "scripts": {
    "start": "node --max-old-space-size=4096 --expose-gc dist/server.js",
    "start:prod": "NODE_ENV=production node --max-old-space-size=4096 --expose-gc dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "test": "jest",
    "clean": "rimraf dist",
    "prisma:generate": "prisma generate",
    "validate:drive": "ts-node src/utils/validateDriveCredentials.ts",
    "predeploy": "npm run validate:drive && npm run build"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.16.0",
    "@prisma/client": "^4.12.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "google-auth-library": "^9.15.1",
    "googleapis": "^148.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^27.0.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^16.18.126",
    "@types/supertest": "^2.0.11",
    "jest": "^27.4.5",
    "nodemon": "^2.0.15",
    "prisma": "^4.12.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
